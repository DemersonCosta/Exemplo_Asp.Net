
<div ng-controller="usuarioCtrl" ng-init="setup()">

    @Html.Partial("Form_")

    <div class="panel panel-default panel-table">
        <div class="panel-heading">
            <div class="row">
                <div class="col col-xs-6">
                    <h3 class="panel-title">Usuario</h3>
                </div>

            </div>
        </div>
    
        <div class="panel-body">
            <table class="table table-striped table-bordered table-list">
                <thead>
                    <tr>
                        <th><em class="fa fa-cog"></em></th>
                        <th class="hidden-xs">ID</th>
                        <th> Nome </th>
                        <th> Cidade </th>
                        <th> Data de Cadstro </th>
                        <th> E-mail </th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="item in viewdata.list">
                        <td align="center">
                            <button type="button" class="btn btn-default" ng-click="editar(item)">
                                <span class="glyphicon glyphicon-pencil"></span>
                            </button>

                            <button type="button" class="btn btn-danger" ng-click="excluir(item)">
                                <span class="glyphicon glyphicon-remove"></span>
                            </button>

                        </td>
                        <td class="hidden-xs">{{item.Id}}</td>
                        <td>{{ item.Nome}}</td>
                        <td>{{ item.Endereco.Cidade}}</td>
                        <td>{{ item.DataCadastro | jsdate}}</td>
                        <td>{{ item.Email}}</td>
                    </tr>
                </tbody>
            </table>

        </div>
    </div>

</div>

@section Scripts {

    @Scripts.Render("~/bundles/usuarioAngular")
}



