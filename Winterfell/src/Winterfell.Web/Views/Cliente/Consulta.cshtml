
@model List<Winterfell.Core.Modulos.ClienteModulo.Cliente>

<div>
    <br/>
    
    <div class="panel panel-default">
        <div class="panel-heading">
            Informe as opções de filtro
        </div>

        <div class="panel-body">
            <form action="/Cliente/Pesquisar" method="POST">

                <div class="row">
                    <div class="form-group col-sm-6 col-md-6 col-lg-6">
                        <label> Nome </label>
                        <input type="text" class="form-control" name="Nome"/>
                    </div>

                    <div class="form-group col-sm-6 col-md-6 col-lg-6">
                        <label> Email </label>
                        <input type="text" class="form-control" name="Email"/>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-md-4 col-lg-6"> </div>
                    <div class="form-group col-md-4 col-lg-3"> </div>

                    <div class="form-group col-md-4 col-lg-3">
                        <button type="submit" class="btn btn-primary form-control"> Pesquisar </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    
    <hr/>

    <div class="panel panel-default">

        <div class="panel-heading">
            <h4 class="modal-title"> Lista de Clientes </h4>
        </div>

        <div class="panel-body">
            <table class= "table table-hover">
                <thead>
                    <tr>
                        <th> Id </th>
                        <th> Nome </th>
                        <th> CPF </th>
                        <th> Nascimento </th>
                        <th> Email </th>
                        <th>  </th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td> @item.Id </td>
                            <td> @item.Nome </td>
                            <td> @item.CPF </td>
                            <td> @item.Nascimento.ToShortDateString() </td>
                            <td> @item.Email </td>
                        </tr>                
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
